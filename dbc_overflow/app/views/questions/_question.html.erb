<h3><%= link_to "#{question.title}", question %></h3>
<p><%= question.content %></p>

<p>
<button><%= link_to "Edit", edit_question_path(question) %></button>

<%= form_for question, :method => :delete do |f| %>
  <%= f.submit  "Delete" %>
<% end %>

<%= link_to raw('<i class="fa fa-thumbs-o-up up"></i>'), question_path(question)+"/upvotes" %>
<%= link_to raw('<i class="fa fa-thumbs-o-down down"></i>'), question_path(question)+"/downvotes" %>
<span class="votes"><%= question.votes %></span>
</p>
