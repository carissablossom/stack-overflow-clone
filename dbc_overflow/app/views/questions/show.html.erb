<div class="question">
  <h1><%= @question.title %></h1>
  Point Count: <span><%= @question.point_count %></span>

  <%= link_to "▲", "/questions/#{@question.id}/upvote", method: "put", class: "vote" %>
  <%= link_to "▼", "/questions/#{@question.id}/downvote", method: "put", class: "vote" %>

  <hr>
  <%= @question.content %>
  <%= button_to "Delete Question", { action: "destroy", id: @question.id }, method: :delete, data: { confirm: "Are you sure?" } %>
  <a href="/questions/<%=@question.id%>/edit">Edit Question</a>
</div>
<hr>
<div id="answer_container">
<% @answer_set.each do |answer| %>
  <%= render partial: "answers/show", locals: {answer: answer} %>
<% end %>
</div>
<h1>Answer Question</h1>
<%= render partial: "answers/new", locals: {question_id: @question.id} %>
