<div>
  <h1>Question <%= @question.id %></h1>
</div>

<div>
  <p>
    <strong>Title:</strong>
    <%= @question.title %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= @question.content %>
  </p>
</div>

<%= link_to 'Delete Question', question_path(@question), method: :delete, data: { confirm: 'Are you sure you want to delete this question' } %>
<br>
<br>
<%= link_to 'Edit Question' , edit_question_path(@question) %>
<br>

  <%= link_to 'Up Vote This Question', question_votes_path(@question, value: 1), method: :post %>

  <br>


  <%= link_to 'Down Vote This Question', question_votes_path(@question, value: -1), method: :post %>

  <br>

  <%= @question.total_votes %> Votes

<div>
  <h2>Answers to the Question are Below</h2>
</div>

<% @question.answers.each do |answer| %>
<p>
  <strong>Title:</strong>
  <%= answer.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= answer.content %>
</p>

  <%= link_to 'Up Vote This Answer', question_votes_path(@question.answers, value: 1), method: :post %>

  <br>


  <%= link_to 'Down Vote This Answer', question_votes_path(@question.answers, value: -1), method: :post %>

  <br>

  <%= @question.answers.total_votes %> Votes

<% end %>

<br>



<h2>Add an Answer:</h2>
<%= form_for([@question, @question.answers.build]) do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>


