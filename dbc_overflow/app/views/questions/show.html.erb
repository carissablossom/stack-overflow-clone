<div class="show_markdown">
  <h2>
    <div class="show_md_title">
      <%= @question['title'] %>
    </div>
  </h2>
  <div class="show_md_content">



    <%= @question['content'] %>
  </div>
</div>

<%= form_for @question, :url => question_path(@question), :html => {:method => :delete} do |f| %>
<%= f.submit "Delete" %>
<% end %>

<a href="/questions/<%=@question['id']%>/edit">Edit Question</a>

<div class="answer_div">
<h2>Answers:</h2>
<% @answers.each do |answer| %>
  <h4><%= answer['title'] %></h4>
  <p><%= answer['content'] %></p>
  votes: <span class="answer_votes"><%= answer['votes'] %></span>
  <%= button_to("△", "/questions/#{answer['question_id']}/answers/#{answer['id']}/upvote", method: "patch", form_class: "a_up") %>
  <%= button_to("▼", "/questions/#{answer['question_id']}/answers/#{answer['id']}/downvote", method: "patch", form_class: "a_down") %>
<% end %>
</div>


<hr>
<h3>Post an answer:</h3>
<%= form_for [@question, @answer] do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<script id="answer_block" type="text/x-handlebars-template">
  <h4>{{ data.title }}</h4>
  <p>{{ data.content }}</p>
  votes: {{ data.votes }}
  <form action = "/questions/{{data.question_id}}/answers/{{data.id}}/upvote" method="patch">
  <input type="submit", value="△"></form>
  <form_action = "/questions/{{data.question_id}}/answers/{{data.id}}/downvote" method="patch">
  <input type="submit", value="▼"></form>
</script>

