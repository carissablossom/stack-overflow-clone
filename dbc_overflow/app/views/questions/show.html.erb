<h1>Question: <%= @question.title %></h1>
<p><%= @question.content %></p>

<p>
  <%= render template: "answers/new.html.erb" %>
</p>

<h2>All answers:</h1>
  <% @question.answers.sort_by{ |answer| answer.created_at }.each_with_index do |answer, index| %>
    <h4><%= index + 1 %>. <%= answer.title %></h4>
    <p><%= answer.content %></p>

    <%= link_to raw('<i class="fa fa-thumbs-o-up"></i>'), question_answer_path(@question, answer)+"/upvotes"%>
    <%= link_to raw('<i class="fa fa-thumbs-o-down"></i>'), question_answer_path(@question, answer)+"/downvotes"%>

    <%= answer.votes %>
  <% end %>
