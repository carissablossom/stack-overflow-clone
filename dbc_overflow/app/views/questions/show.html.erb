<h1><%= @question.title %></h1>
<p><%= @question.content %></p>

<ul>
<% @answers.each do |answer| %>
  <li><%= answer.content %></li>
<% end %>
</ul>

<%= form_for [@question, @answer] do |f| %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= button_to "delete", @question, method: :delete %>

<%= button_to "edit", edit_question_path, method: :get %>
