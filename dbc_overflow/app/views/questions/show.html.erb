<h1>Question: <%= @question.title %></h1>
<p><%= @question.content %></p>

<p><%= render "answers/new" %></p>

<h2>All answers:</h1>

<% @question.answers.sort_by{ |answer| answer.created_at }.each_with_index do |answer, index| %>

  <div class="answer">
    <%= render "answers/answer", answer: answer, index: index %>
  </div>

<% end %>
