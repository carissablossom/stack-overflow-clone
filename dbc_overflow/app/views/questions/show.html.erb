<h1>DBC Overflow</h1>
<h1>Your Question</h1>
<td><%= @question.content %></td>
<td><%= link_to 'Edit', edit_question_path(@question) %></td>
<td> <%= button_to("delete question", @question, method: :delete) %>




<h2>All answers:</h2>
<% @question.answers.each_with_index do |answer, index| %>
<h4><%= index + 1%>. <%= answer.title %></h4>
<p><%= answer.content %></p>

<% end %>
<h3>Make An Answer</h3>

<%= form_for [@question, @answer]  do |f| %>
  <p>
    <%= f.text_field :title %>
  </p>
  <p>
    <%=f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>






