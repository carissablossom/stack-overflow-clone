<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Post:</strong>
  <%= @post.content %>
</p>
<p>
  <strong>Votes:</strong>

 <%= @post.votes %>
</p>

<h2>Answers</h2>
<% @post.answers.each do |answer| %>
  <p>
    <strong>Commenter:</strong>
    <%= answer.commenter %>
  </p>
  <p><strong>Answer</strong>
    <%= answer.reply %>
  </p>
<% end %>

<h2>Add a comment</h2>
<%= form_for([@post, @post.answers.build]) do |f| %>
<p>
  <%= f.label :commenter %>
  <%= f.text_field :commenter %>
</p>
<p>
  <%= f.label :reply %>
  <%= f.text_area :reply %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
