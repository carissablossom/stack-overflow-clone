<p id="notice"><%= notice %></p>
<h1><%= @tag.name  %></h1>

<table>
  <tr>
    <th>Votes</th>
    <th>Answers</th>
    <th>Title</th>
    <th>Tags</th>
    <th>Asked By</th>
    <th colspan="5"></th>
  </tr>

  <% @tag.questions.each do |question| %>
    <tr>
      <td><%= question.vote_count %></td>
      <td><%= question.answers.length %></td>
      <td><%= link_to question.title, question_path(question) %></td>
      <td>
        <% question.tags.each do |tag| %>
        <%= link_to tag.name, tag_path(tag) %>
        <% end %>
      </td>
      <td><%= question.user.username %></td>
      <td><%= link_to 'Show', question_path(question) %></td>
      <td><%= link_to 'Edit', edit_question_path(question) %></td>
      <td><%= link_to 'Destroy', question_path(question),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'All Tags', tags_path %> |
<%= link_to 'Back', questions_path %>
