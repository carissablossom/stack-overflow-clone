  <script id="sample-template" type="text/x-handlebars-template">
    <li>
      <h4>{{title}}</h4>
      <p>{{content}}</p>
      <p>{{vote_totals}}</p>
    </li>
  </script>
 -->

  <%= form_for :question, url: questions_path, remote: true, :html => { :class => 'question_form sml' } do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </p>

    <p>
      <%= f.submit 'Create new Question'%>
    </p>
  <% end %>
</div>
