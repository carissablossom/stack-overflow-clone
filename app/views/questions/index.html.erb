<%#= @quote %>
<h1>List of Questions</h1>
<% @questions.each do |question| %>
  <p>
    <%= link_to question.title, question_path(question) %>
    <%= link_to 'Edit', edit_question_path(question) %><br>
    Votes: <%= question.vote_totals %>
    <%= button_to 'Upvote', upvote_question_path(question), :method => :put %>
    <%= button_to 'Downvote', downvote_question_path(question), :method => :put %>
  </p>
<% end %>

<h1>Create a new Question</h1>
<%= form_for :question, url: questions_path, remote: true, :html => { :class => 'question_form' } do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit 'Create new Question'%>
  </p>
<% end %>
