<%#= @quote %>
<div class='wrapper'>

  <div id='new_question'
  </div>

  <h1 class='lrg'>List of Questions</h1>
  <% @questions.each do |question| %>
      <p>
        <%= link_to question.title, question_path(question) %>
        <br>
        <%= link_to 'Edit', edit_question_path(question) %>
        <%= link_to 'Delete', question_path(question), method: :delete %>
        Votes: <%= question.vote_totals %>
        <%= button_to 'Upvote', upvote_question_path(question), :method => :put %>
        <%= button_to 'Downvote', downvote_question_path(question), :method => :put %>
      </p>
  <% end %>

  <script id="sample-template" type="text/x-handlebars-template">
    <p>
      <%= link_to "{{ title }}", question_path("{{id}}") %>
      <br>
      <%= link_to "Edit", edit_question_path("{{id}}") %>
      <%= link_to "Delete", question_path("{{id}}"), method: :delete %>
      Votes: <%= "{{ vote_totals }}" %>
      <%= button_to "Upvote", upvote_question_path("{{id}}"), :method => :put %>
      <%= button_to "Downvote", downvote_question_path("{{id}}"), :method => :put %>
    </p>
  </script>

