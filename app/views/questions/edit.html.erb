<div id="edit_question">
  <h1>Edit Question</h1>

  <%= form_for :question, url: question_path(@question), method: :patch do |f| %>

    <% if @update_errors %>
      <% @update_errors.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>
</div>
