<h1>Questions#show</h1>
<p>Find me in app/views/questions/show.html.erb</p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<%= form_for :answer do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<br><%= link_to 'Edit Question', edit_question_path %>

<%= form_for :question, :html => {:method => :delete} do |f| %>
  <p>
    <%= f.label "Delete Question?" %>
    <%= f.check_box :_destroy %>
    <%= submit_tag "Delete" %>
  </p>
<% end %>

