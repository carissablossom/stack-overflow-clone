<%= link_to "Go back to all the Questions!", questions_path %>


<table>
  <td>
    <tr><h2>Title: <%= @question.title %></h2></tr>
    <tr><p>Question: <%= @question.content %></p></tr>
    <tr><p>Votes: <%= @question.votes %></p></tr>
    <tr>
      <%= form_tag question_path, method: "put" %>
      <%= submit_tag "Upvote" %>
      <%= submit_tag "Downvote" %>
    </td>
  </tr>
</table>


<% if current_user && (current_user.id == @question.user_id) %>
  <%= link_to "Edit Question", edit_question_path(@question) %>
<% end %>

<h3>Answers: </h3>
<%= render '/answer/show' %>



<h3>Add Answer: </h3>
<%= form_for([@question, @answers.build]) do |f| %>
  <% if @error %>
    <p><%= @error.first %></p>
  <% end %>

  <p>
    <%= f.label :answer %>
    <%= f.text_field :answer %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
