<table>
  <tbody>
    <% @answers.each do |answer| %>
      <td>
        <tr><%= answer.answer %></tr><br>
        <tr>Votes: <%= answer.votes %></tr><br>

        <tr>
          <%= form_tag question_answer_path(answer.question_id, answer), method: 'put' do %><br>
            <%= submit_tag "Upvote" %>
            <%= submit_tag "Downvote" %>
          <% end %>
        </tr>

      </td>
    <% end %>
  </tbody>
</table>


