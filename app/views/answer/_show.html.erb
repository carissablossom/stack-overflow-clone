<div id="answer_table">
  <table>
    <tbody>
      <% @answers.each do |answer| %>
        <tr>
          <td>
            <%= answer.answer %>
          </td>
        </tr>
        <tr>
          <td>
            Votes: <%= answer.votes %>
          </td>
        </tr>
        <tr>
          <td>
            <%= form_tag question_answer_path(answer.question_id, answer), method: 'patch' do %>
              <%= submit_tag "Upvote" %>
              <%= submit_tag "Downvote" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

